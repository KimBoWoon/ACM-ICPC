{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "g++",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "args": [
                "/mnt/d/Github/ACM-ICPC/ACM-ICPC/${fileBasename}"
            ]
        },
        {
            "label": "exec",
            "type": "shell",
            "command": "./a.out"
        },
        {
            "label": "rm -rf",
            "type": "shell",
            "command": "rm",
            "args": [
                "-rf",
                "./a.out"
            ]
        }
    ]
}